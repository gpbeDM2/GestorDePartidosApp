<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_editar_partido_usuario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mikel.gestordepartidos.EditarPartidoUsuario"
    android:background="@color/colorPrimary">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ekialdea infantil B"
        android:id="@+id/editar_partido_usuario_equipo1"
        android:textColor="@android:color/background_light"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" - "
        android:layout_toRightOf="@id/editar_partido_usuario_equipo1"
        android:id="@+id/editar_partido_usuario_guion"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:textColor="@android:color/background_light"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ekialdea infantil c"
        android:layout_toRightOf="@id/editar_partido_usuario_guion"
        android:id="@+id/editar_partido_usuario_equipo2"
        android:textColor="@android:color/background_light"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editar_partido_usuario_hora"
        android:text="10:00"
        android:layout_below="@id/editar_partido_usuario_equipo1"
        android:layout_marginTop="50px"
        android:textColor="@android:color/background_light"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editar_partido_usuario_txtarb"
        android:text="Arbitro: "
        android:layout_below="@id/editar_partido_usuario_hora"
        android:layout_marginTop="50px"
        android:textColor="@android:color/background_light"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editar_partido_usuario_arbitro"
        android:text="Jon Ochoa"
        android:layout_below="@id/editar_partido_usuario_hora"
        android:layout_marginTop="50px"
        android:layout_toRightOf="@id/editar_partido_usuario_txtarb"
        android:layout_marginLeft="50px"
        android:visibility="invisible"
        android:textColor="@android:color/background_light"/>
    <Button
        android:layout_width="280px"
        android:layout_height="75px"
        android:id="@+id/editar_partido_usuario_botonarbitro"
        android:text="aÃ±adir arbitro"
        android:layout_below="@id/editar_partido_usuario_hora"
        android:layout_marginTop="25px"
        android:layout_toRightOf="@id/editar_partido_usuario_txtarb"
        android:layout_marginLeft="50px"
        android:background="@drawable/borde_botones_blanco"
        android:textColor="@color/colorPrimary"
        android:onClick="addarbitro"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editar_partido_usuario_txtmesa"
        android:text="Mesa: "
        android:layout_below="@id/editar_partido_usuario_arbitro"
        android:layout_marginTop="50px"
        android:textColor="@android:color/background_light"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editar_partido_usuario_mesa"
        android:text="1"
        android:layout_below="@id/editar_partido_usuario_arbitro"
        android:layout_marginTop="50px"
        android:layout_toRightOf="@id/editar_partido_usuario_txtarb"
        android:layout_marginLeft="55px"
        android:textColor="@android:color/background_light"/>


</RelativeLayout>
