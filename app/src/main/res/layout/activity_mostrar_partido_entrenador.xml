<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_listado_invitado"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mikel.gestordepartidos.mostrar_partido"
    android:background="@drawable/fondo10">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ekialdea infantil B"
        android:id="@+id/mostrar_partido_equipo1"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="46dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mostrar_partido_hora"
        android:text="10:00"
        android:textColor="@color/colorPrimary"
        android:layout_alignBaseline="@+id/mostrar_partido_equipo1"
        android:layout_alignBottom="@+id/mostrar_partido_equipo1"
        android:layout_toRightOf="@+id/mostrar_partido_equipo1"
        android:layout_toEndOf="@+id/mostrar_partido_equipo1"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/larbitro"
        android:id="@+id/mostrar_arbitro"
        android:layout_below="@+id/mostrar_partido_equipo1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mostrar_mesa"
        android:text="@string/lmesa"
        android:layout_below="@+id/mostrar_arbitro"
        android:layout_alignRight="@+id/mostrar_arbitro"
        android:layout_alignEnd="@+id/mostrar_arbitro"
        android:layout_marginTop="24dp" />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spin_arbitro"/>

</RelativeLayout>
