<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mikel.gestordepartidos.Login"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario:"
        android:id="@+id/login_txtusuario"
        android:layout_marginLeft="100px"
        android:layout_marginTop="100px"/>
    <TextView
        android:layout_below="@id/login_txtusuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ContraseÃ±a:"
        android:id="@+id/login_txtpassword"
        android:layout_marginLeft="100px"
        android:layout_marginTop="50px"/>
    <EditText
        android:layout_width="300px"
        android:layout_height="50px"
        android:layout_toRightOf="@id/login_txtpassword"
        android:layout_marginLeft="50px"
        android:id="@+id/login_edusuario"
        android:layout_marginTop="100px"/>
    <EditText
        android:layout_width="300px"
        android:layout_height="50px"
        android:layout_below="@id/login_txtusuario"
        android:layout_marginTop="50px"
        android:layout_toRightOf="@id/login_txtpassword"
        android:layout_marginLeft="50px"
        android:id="@+id/login_edpassword"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Conectar"
        android:onClick="conexion"
        android:layout_below="@+id/login_txtpassword"
        android:layout_toRightOf="@id/login_txtpassword"
        android:layout_marginTop="200px"/>

</RelativeLayout>
